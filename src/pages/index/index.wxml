<scroll-view class="scrollarea" scroll-y enable-flex enhanced show-scrollbar="{{true}}" style="height: 100vh;">
  <view class="container">
    <view class="header">
      <text class="title">招乎-AI招商工具箱</text>
    </view>
    
    <view class="section">
      <text class="section-title">智能工具</text>
      
      <view class="tool-item" bindtap="goToFindProject">
        <view class="tool-icon-container blue">
          <image class="tool-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
        </view>
        <view class="tool-info">
          <text class="tool-name">找项目</text>
          <text class="tool-desc">基于现有区域或载体资源信息，快速匹配适合的招商项目</text>
        </view>
        <image class="arrow-icon" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0iI2JkYmRiZCI+PHBhdGggZD0iTTguNTkgMTYuNTlMMTMuMTcgMTIgOC41OSA3LjQxIDEwIDZsNiA2LTYgNi0xLjQxLTEuNDF6Ii8+PC9zdmc+" mode="aspectFit"></image>
      </view>
      
      <view class="tool-item" bindtap="goToFindVenue">
        <view class="tool-icon-container blue">
          <image class="tool-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
        </view>
        <view class="tool-info">
          <text class="tool-name">找载体</text>
          <text class="tool-desc">基于提供的需求或项目信息，匹配合适的产业园区、厂房、办公空间等载体资源</text>
        </view>
        <image class="arrow-icon" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0iI2JkYmRiZCI+PHBhdGggZD0iTTguNTkgMTYuNTlMMTMuMTcgMTIgOC41OSA3LjQxIDEwIDZsNiA2LTYgNi0xLjQxLTEuNDF6Ii8+PC9zdmc+" mode="aspectFit"></image>
      </view>
      
      <view class="tool-item" bindtap="goToIndustryAnalysis">
        <view class="tool-icon-container blue">
          <image class="tool-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
        </view>
        <view class="tool-info">
          <text class="tool-name">产业链分析</text>
          <text class="tool-desc">深入分析产业链上下游关系、供需情况及趋势</text>
        </view>
        <image class="arrow-icon" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0iI2JkYmRiZCI+PHBhdGggZD0iTTguNTkgMTYuNTlMMTMuMTcgMTIgOC41OSA3LjQxIDEwIDZsNiA2LTYgNi0xLjQxLTEuNDF6Ii8+PC9zdmc+" mode="aspectFit"></image>
      </view>
      
      <view class="tool-item" bindtap="goToRelocEval">
        <view class="tool-icon-container blue">
          <image class="tool-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
        </view>
        <view class="tool-info">
          <text class="tool-name">迁址动力评估</text>
          <text class="tool-desc">综合区域政策、成本等因素，评估指定企业的迁址或对外投资的可能性</text>
        </view>
        <image class="arrow-icon" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0iI2JkYmRiZCI+PHBhdGggZD0iTTguNTkgMTYuNTlMMTMuMTcgMTIgOC41OSA3LjQxIDEwIDZsNiA2LTYgNi0xLjQxLTEuNDF6Ii8+PC9zdmc+" mode="aspectFit"></image>
      </view>
    </view>
    
    <view class="section">
      <text class="section-title">最近使用</text>
      
      <view wx:if="{{loading}}" class="loading-container">
        <view class="loading-spinner"></view>
        <text class="loading-text">加载历史记录中...</text>
      </view>
      
      <view wx:elif="{{recentUse.length === 0}}" class="empty-history">
        <text class="empty-text">暂无使用记录</text>
      </view>
      
      <block wx:else>
        <view class="history-list">
          <view class="history-item" wx:for="{{recentUse}}" wx:key="id" bindtap="goToRecentTool" data-tool="{{item}}">
            <view class="history-dot"></view>
            <view class="history-content">
              <view class="history-header">
                <text class="history-text">{{item.name}}</text>
                <text class="history-time">{{item.date}}</text>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</scroll-view>

<!-- 使用自定义组件 -->
<custom-tabbar activeTab="index"></custom-tabbar>
